{
  "id": "openclaw-mcp-adapter",
  "name": "MCP Adapter",
  "description": "Exposes MCP server tools as native OpenClaw agent tools",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "servers": {
        "type": "array",
        "description": "List of MCP servers to connect to",
        "items": {
          "type": "object",
          "required": ["name"],
          "properties": {
            "name": {
              "type": "string",
              "description": "Unique name for this server (used as tool prefix)"
            },
            "transport": {
              "type": "string",
              "enum": ["stdio", "http"],
              "default": "stdio",
              "description": "Connection type"
            },
            "command": {
              "type": "string",
              "description": "For stdio: command to spawn"
            },
            "args": {
              "type": "array",
              "items": { "type": "string" },
              "description": "For stdio: command arguments"
            },
            "env": {
              "type": "object",
              "additionalProperties": { "type": "string" },
              "description": "Environment variables (supports ${VAR} interpolation)"
            },
            "url": {
              "type": "string",
              "description": "For http: server URL"
            },
            "headers": {
              "type": "object",
              "additionalProperties": { "type": "string" },
              "description": "For http: request headers (supports ${VAR} interpolation)"
            },
            "authTokenCommand": {
              "type": "string",
              "description": "For http: command used to fetch an OAuth/access token dynamically"
            },
            "authTokenArgs": {
              "type": "array",
              "items": { "type": "string" },
              "description": "For http: arguments for authTokenCommand"
            },
            "authTokenRefreshArgs": {
              "type": "array",
              "items": { "type": "string" },
              "description": "For http: additional arguments appended during forced token refresh"
            },
            "authTokenHeader": {
              "type": "string",
              "default": "Authorization",
              "description": "HTTP header name used for dynamic token auth"
            },
            "authTokenPrefix": {
              "type": "string",
              "default": "Bearer",
              "description": "Prefix prepended to token value (empty string for raw token)"
            },
            "authTokenTtlSeconds": {
              "type": "number",
              "default": 2700,
              "description": "Cached token TTL in seconds before proactive refresh"
            }
          }
        }
      },
      "toolPrefix": {
        "type": "boolean",
        "default": true,
        "description": "Prefix tool names with server name"
      }
    }
  }
}
